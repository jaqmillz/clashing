rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Player stats - public read, only Cloud Functions can write
    match /players/{playerId}/stats/{statId} {
      allow read: if true;
      allow write: if false;
    }

    // Card data - public read, only Cloud Functions can write
    match /cards/{cardId} {
      allow read: if true;
      allow write: if false;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
